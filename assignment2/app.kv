BoxLayout:
    BoxLayout:
        id: id01
        orientation: 'vertical'
        size_hint: 0.4, 1
        Label:
            text: 'Sort by:'
        Spinner:
            id: spin
            text: app.current_sort
            values: app.sort_list
            on_text: app.sort(self)
        Label:
            text: 'Add New Book...'
        Label:
            text: 'Title'
        TextInput:
            id: Text01
            write_tab: False
        Label:
            text: 'Author'
        TextInput:
            write_tab: False
            id: Text02
        Label:
            text: 'Pages'
        TextInput:
            write_tab: False
            id: Text03
        Button:
            id: Add_Book
            text: 'Add Book'
            on_press: app.add_book()
        Button:
            id: clear
            text: 'Clear'
            on_press: app.clear()
    BoxLayout:
        id: id02
        orientation: 'vertical'

        BoxLayout:
            size_hint: 1, 0.1
            Label:
                id: to_read
                text: 'Reading pages'


        BoxLayout:
            orientation: 'vertical'
            id: book_list
            size_hint: 1, 0.8


        BoxLayout:
            size_hint: 1, 0.1
            Label:
                id: output




